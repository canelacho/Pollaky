<!DOCTYPE html>
<html lang="en" ng-app="usersApp">
<head>
	<% include ../partials/head %>
</head>
<body class="container"  ng-cloak>

	<header>
		<% include ../partials/header %>
	</header>

	<main ng-controller="ctrl_Users">
	<div class="container">

		<form class="form-inline" action="/app/users" method="POST">
			<div class="form-group">
				<label class="sr-only" for="username"></label>
				<input id="username" class="form-control" name="username" placeholder="User Name" type="text" ng-model="username"></input>
			</div>
			<div class="form-group">
				<select class="form-control" name="type" ng-model="type">
				  <option value="User" selected>User</option>
				  <option value="Admin">Admin</option>
				</select>
			</div>
			<div class="form-group">
				<label class="sr-only" for="password"></label>
				<input id="password" class="form-control" name="password" placeholder="Password" type="password" ng-model="password"></input>
			</div>
			<input class="form-group btn btn-success" type="submit" value="Save" ng-show="btnSave" />
			<input class="form-group btn btn-info" type="button" value="Save Edit" ng-click="updateUser(id, username, type, password)" ng-show="btnSaveEdit" />
			<input class="form-group btn btn-danger" type="button" value="Cancel" ng-click="cancelEditUser()" ng-show="btnCancel" />
		</form>
		<div class="lineListUsers">
  			<i></i>
  		</div>
		<div>
			<h2>List of Users </span></h2>
			<table class="table table-striped table-hover table-responsive">	
				<thead>
					<tr>
						<td class="col-sm-5 col-md-5 col-lg-5"><h4>Name</h4></td>
						<td class="col-sm-3 col-md-3 col-lg-3"><h4>Rol</h4></td>
						<td class="col-sm-2 col-md-2 col-lg-2"><h4>Created</h4></td>
						<td class="col-sm-1 col-md-1 col-lg-1"></td>
						<td class="col-sm-1 col-md-1 col-lg-1"></td>
					</tr>
				</thead>
				<tbody>
					<tr ng-repeat="User in Users | orderBy:'User':true" ">
						<td>{{ User.username }}</td>
						<td>{{ User.type }}</td>
						<td>{{ User.dateCreation | date:'MM-dd-yyyy HH:mm:ss'}}</td>
						<td><button class="btn btn-warning btn-sm" ng-click="selectUser(User._id)"> Edit <span class="glyphicon glyphicon-pencil"></span></button></td>
						<td><button class="btn btn-danger  btn-sm" ng-click="deleteUser(User._id)"> Delete <span class="glyphicon glyphicon-trash"></span></button></td>
					</tr>
				</tbody>
			</table>
		</div>


	</div>
	</main>

	<footer>
		<% include ../partials/footer %>
	</footer>


<!-- CONNECTION TO CONTROLERS -->
<script src="/controllers/ctrllerUser.js"></script>


</body>
</html>